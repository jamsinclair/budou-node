{
  "name": "budou",
  "version": "0.1.1",
  "description": "Node.js port of tool for beautiful line breaking in CJK (Chinese, Japanese, and Korean)",
  "main": "./src/budou.js",
  "author": "Jamie Sinclair",
  "license": "MIT",
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier-standard '**/*.js'",
    "release": "yarn run format && np",
    "test": "jest"
  },
  "dependencies": {
    "@google-cloud/language": "^1.2.0",
    "escape-html": "^1.0.3",
    "lowdb": "^1.0.0",
    "pkg-dir": "^3.0.0",
    "striptags": "^3.1.1",
    "unicode": "^11.0.1"
  },
  "devDependencies": {
    "jest": "^23.4.2",
    "np": "^3.0.4",
    "prettier-standard": "^8.0.1"
  },
  "engines": {
    "node": ">=6.14.0"
  },
  "eslintConfig": {
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ]
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
